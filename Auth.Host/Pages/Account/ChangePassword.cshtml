@page
@using Auth.Host.Pages.Account
@model ChangePasswordModel
@{
    ViewData["Title"] = "Смена пароля";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Computer Club Auth</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @* тёмная/светлая тема от системных настроек *@
        :root {
            color-scheme: light dark;
        }
        @@media (prefers-color-scheme: dark) {
            body

        {
            background-color: #0b0b0f;
            color: #e9e9ef;
        }

        .card {
            background: rgba(255,255,255,0.06);
            border-color: rgba(255,255,255,0.12);
        }

        .input {
            background: rgba(255,255,255,0.08);
            border-color: rgba(255,255,255,0.18);
            color: #fff;
        }

        }
        @@media (prefers-color-scheme: light) {
            body

        {
            background: #f6f7fb;
            color: #1e1e28;
        }

        .card {
            background: rgba(255,255,255,0.95);
            border-color: rgba(0,0,0,0.08);
        }

        .input {
            background: #fff;
            border-color: rgba(0,0,0,0.15);
            color: #111;
        }

        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="card w-full max-w-md rounded-2xl shadow-2xl p-8 border">

        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold">Смена пароля</h2>
            <p class="opacity-70 mt-1 text-sm">
                Введите текущий пароль и новый пароль.
                @if (Model.RequireChange)
                {
                    <span class="text-amber-600 dark:text-amber-400 font-medium">Смена обязательна.</span>
                }
            </p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-4 rounded-lg border border-red-300/50 bg-red-50 text-red-700 p-3 text-sm">
                @Html.ValidationSummary(excludePropertyErrors: true)
            </div>
        }

        <form method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ReturnUrl)
            @Html.HiddenFor(m => m.RequireChange)

            <div>
                <label class="block text-sm mb-1">Текущий пароль</label>
                @Html.PasswordFor(m => m.CurrentPassword, new {
                @class = "input w-full px-3 py-2 rounded-lg border outline-none focus:ring-2 focus:ring-indigo-500",
                                placeholder = "Текущий пароль",
                                autofocus = "autofocus"
                                })
                @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-sm text-red-600 mt-1 block" })
            </div>

            <div>
                <label class="block text-sm mb-1">Новый пароль</label>
                @Html.PasswordFor(m => m.NewPassword, new {
                                @class = "input w-full px-3 py-2 rounded-lg border outline-none focus:ring-2 focus:ring-indigo-500",
                                placeholder = "Новый пароль"
                                })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-sm text-red-600 mt-1 block" })
                <p class="text-xs opacity-60 mt-1">
                    Минимум 6–8 символов, желательно буквы в разных регистрах, цифры и спецсимволы.
                </p>
            </div>

            <div>
                <label class="block text-sm mb-1">Подтверждение нового пароля</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new {
                                @class = "input w-full px-3 py-2 rounded-lg border outline-none focus:ring-2 focus:ring-indigo-500",
                                placeholder = "Повторите новый пароль"
                                })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-sm text-red-600 mt-1 block" })
            </div>

            <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2.5 rounded-lg transition">
                Сменить пароль
            </button>

            <div class="text-center">
                <a href="@(!string.IsNullOrWhiteSpace(Model.ReturnUrl) ? Model.ReturnUrl : "/")"
                   class="text-sm opacity-80 hover:opacity-100 underline">
                    Отмена
                </a>
            </div>
        </form>
    </div>
</body>
</html>
